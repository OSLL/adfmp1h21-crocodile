<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.firsttimeinforever.crocodile">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.Crocodile">
        <activity android:name=".TurnActivity"></activity>
        <activity android:name=".MidTurnActivity" />
        <activity
                android:name=".GameSettingsActivity"
                android:label="@string/title_activity_game_settings"
                android:theme="@style/Theme.Crocodile.NoActionBar" />
        <activity android:name=".GameThemeSelectActivity" />
        <activity android:name=".GameRulesActivity" />
        <activity android:name=".MainMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
